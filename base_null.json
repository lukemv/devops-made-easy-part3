{
    "variables": {
        "home_folder": "{{env `HOME`}}"
    },
    "builders": [
      {
        "type": "null",
        "communicator": "ssh",
        "ssh_host": "10.100.0.10",
        "ssh_port": "22",
        "ssh_timeout": "10s",
        "ssh_username": "vagrant",
        "ssh_private_key_file": "{{user `home_folder`}}/.vagrant.d/insecure_private_key"
      }
    ],
    "provisioners": [
      {
          "type": "shell",
          "scripts": [
            "./scripts/bootstrap.sh"
          ]
      }
    ]
  }
  